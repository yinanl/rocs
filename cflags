# set directory of external packages
BSTDIR := /usr/local/opt/boost
MATDIR := /Applications/MATLAB_R2016a.app
LADIR := /usr/local/opt/armadillo

# set the root dir
#RDIR := $(CURDIR)
#export RDIR

# set all compiler and linker flags
OPT := -O3
#EXTRA_OPT = -fwhole-program

# for armadillo
DEBUG := -DARMA_NO_DEBUG #-DARMA_EXTRA_DEBUG

CXX = clang++

INCS := -I$(BSTDIR)/include \
	-I$(LADIR)/include \
	-I$(MATDIR)/extern/include \
	-I/usr/local/include

LIBS := -larmadillo -lmat -leng -lmx
LIBTEST := -lboost_unit_test_framework-mt

CXXFLAGS := -Wall -g\
	$(DEBUG) $(OPT) $(EXTRA_OPT) \
	-std=c++11 -stdlib=libc++

LDFLAGS := -L$(BSTDIR)/lib \
	-L$(LADIR)/lib \
	-L$(MATDIR)/bin/maci64 -rpath $(MATDIR)/bin/maci64

